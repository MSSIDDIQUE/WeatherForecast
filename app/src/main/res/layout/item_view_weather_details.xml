<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.baymax.weather.forecast.usecases.weather_forecast.data.domain_model.WeatherDM" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_weather_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/exposed_view"
                app:data="@{data}"
                layout="@layout/item_view_weather_details_expanded" />

            <include
                android:id="@+id/hidden_view"
                android:visibility="gone"
                layout="@layout/item_view_weather_details_collapsed" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>