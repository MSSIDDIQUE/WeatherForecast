<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.baymax.weatherforecast.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_weatherDetailsBottomSheet"
            app:destination="@id/weatherDetailsBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.baymax.weatherforecast.ui.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <dialog
        android:id="@+id/weatherDetailsBottomSheet"
        android:name="com.baymax.weatherforecast.ui.bottom_sheets.WeatherDetailsBottomSheet"
        android:label="WeatherDetailsBottomSheet" >
        <argument
            android:name="date"
            app:argType="string"
            android:defaultValue="" />
    </dialog>
</navigation>